@model Ekipa.Models.ViewModel.ReservationVM

@{
	ViewBag.Title = "CustomerReservation";
}

<h2>CustomerReservation</h2>

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()
	@Html.HiddenFor(x => x.Id);
	@Html.HiddenFor(x => x.TermId);
	@Html.HiddenFor(x => x.CustomerId);


	<div class="form-horizontal">
		<h4>ReservationVM</h4>
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
			@Html.LabelFor(model => model.DescriptionCustomer, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.DescriptionCustomer, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.DescriptionCustomer, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.DescriptionCompany, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.DescriptionCompany, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.DescriptionCompany, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.CompanyAccept, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				<div class="checkbox">
					@Html.EditorFor(model => model.CompanyAccept)
					@Html.ValidationMessageFor(model => model.CompanyAccept, "", new { @class = "text-danger" })
				</div>
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Create" class="btn btn-default" />
			</div>
		</div>
	</div>
	if (null != TempData["alertMessage"])
	{
		<script type="text/javascript">
       alert("@TempData["alertMessage"]");
		</script>
	}
}

<div>
	@Html.ActionLink("Back to List", "Index")
</div>
