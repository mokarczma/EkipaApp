@model Ekipa.Models.ViewModel.Company.CompanyTermVM

@{
	ViewBag.Title = "View";
}

<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<script src="//code.jquery.com/jquery-1.10.2.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>


<script>
$(document).ready(function () {
	$(".dateFormat").datepicker({
			dateFormat: "dd-mm-yy",
			changeMonth: true,
			changeYear: true,
			dayNamesMin: ["N", "Pn", "Wt", "Śr", "Cz", "Pt", "So", "N"],
			monthNamesShort: ["Sty", "Lu", "Mar", "Kw", "Maj", "Cze", "Lip", "Sie", "Wrz", "Pa", "Lis", "Gru"]
	}).datepicker("setDate", "0");
	});
</script>

<h5>Dodaj nowy termin</h5>

@using (Html.BeginForm("TermCreate", "Term", FormMethod.Post))
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">

		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
			<dt>Data początkowa</dt>
			<div class="col-md-10">
				@Html.EditorFor(model => model.DateStart, new { htmlAttributes = new { @class = "form-control dateFormat ", @placeholder = "dd-mm-rrrr" } })


				@Html.ValidationMessageFor(model => model.DateStart, "", new { @class = "text-danger" })
			</div>
		</div>
		<div class="form-group">
			<dt>Data końcowa</dt>
			<div class="col-md-10">
				@Html.EditorFor(model => model.DateStop, new { htmlAttributes = new { @class = "form-control dateFormat", @placeholder = "dd -mm-rrrr" } })
				@Html.ValidationMessageFor(model => model.DateStop, "", new { @class = "text-danger" })
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<button class="search-button btn my-2 my-sm-0" type="submit">Zapisz</button>
			</div>
		</div>
	</div>
}
@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
