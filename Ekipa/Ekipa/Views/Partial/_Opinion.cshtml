@model Ekipa.Models.ViewModel.OpinionVM
	
<div>
	<h5>
		@Html.DisplayFor(model => model.CustomerName)

		<a class="stars">
			@for (int i = 0; i < Model.GradeValue; i++)
		{
			<span class="fa fa-star checked"></span>
		}
			@for (int i = 0; i < (5 - Model.GradeValue); i++)
		{
			<span class="fa fa-star"></span>
		}
			@Model.GradeValue/5

		</a>

	</h5>

	<h2 class="descript">@Html.DisplayFor(model => model.Description)</h2>

</div>
<hr />
