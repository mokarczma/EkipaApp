@model Ekipa.Models.ViewModel.OpinionVM

	<div>
		@Html.DisplayFor(model => model.CustomerName)

		<a class="stars">
			@for (int i = 0; i < Model.GradeValue; i++)
			{
				<span class="fa fa-star checked"></span>
			}
			@for (int i = 0; i < (5 - Model.GradeValue); i++)
			{
				<span class="fa fa-star"></span>
			}
			@Model.GradeValue/5
		</a>

	</div>
    <div class="descript">@Html.DisplayFor(model => model.Description)</div>

<hr />
