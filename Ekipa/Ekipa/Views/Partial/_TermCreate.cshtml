@model Ekipa.Models.ViewModel.Company.CompanyTermVM



<h5>Dodaj nowy termin</h5>
@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">

		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
			<dt>Data początkowa</dt>
			<div class="col-md-10">
				@Html.EditorFor(model => model.DateStart, new { htmlAttributes = new { @class = "form-control datepicker", @placeholder = "dd-mm-rrrr" } })
				@Html.ValidationMessageFor(model => model.DateStart, "", new { @class = "text-danger" })
			</div>
		</div>
		<div class="form-group">
			<dt>Data końcowa</dt>
			<div class="col-md-10">
				@Html.EditorFor(model => model.DateStop, new { htmlAttributes = new { @class = "datepicker field form-control", @placeholder = "dd -mm-rrrr" } })
				@Html.ValidationMessageFor(model => model.DateStop, "", new { @class = "text-danger" })
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<button class="search-button btn my-2 my-sm-0" type="submit">Zapisz</button>
			</div>
		</div>
	</div>
}


