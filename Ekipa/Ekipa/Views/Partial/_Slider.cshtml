@model List<Ekipa.Models.DB.Image>
@{
	int counter = 0;
}

<div>
	<div class="row">

		@for (int i = 0; i < Model.Count(); i++)
		{
			if (counter != 0 && counter % 3 == 0)
			{
				@:</div>
			<hr />
			@:<div class="row">
			}
			<div class="col-md-4">
				<img class="img-responsive companyImage" src="@Url.Content(Model[i].Link)" />
			</div>
			counter++;

		}
	</div>
</div>
<hr/>

<style>

	.companyImage {
		width: 350px ;
		height: 250px ;
	}
</style>

