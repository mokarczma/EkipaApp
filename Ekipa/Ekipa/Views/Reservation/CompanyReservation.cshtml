@model Ekipa.Models.ViewModel.ReservationVM

@{
	ViewBag.Title = "CompanyReservation";
}

<h2>Rezerwacja:</h2>

<h4>@Model.CustomerName</h4>

<a class="color-green white term-box" href='@Url.Action("MessageFromCompany", "Message", new RouteValueDictionary(  new { idCustomer = Model.CustomerId}))'>
	Wyślij wiadomość
</a>
<hr />

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()
	@Html.ValidationSummary(true, "", new { @class = "text-danger" })
	@Html.HiddenFor(model => model.Id)

	<div class="row form-group col-md-12">
		@Html.LabelFor(model => model.DescriptionCustomer, htmlAttributes: new { @class = "control-label col-md-2" })
		@Html.DisplayFor(model => model.DescriptionCustomer)
	</div>

	<div class="row form-group col-md-12">
		@Html.LabelFor(model => model.DescriptionCompany, htmlAttributes: new { @class = "control-label col-md-2" })
		@Html.EditorFor(model => model.DescriptionCompany, new { htmlAttributes = new { @class = "form-control" } })
		@Html.ValidationMessageFor(model => model.DescriptionCompany, "", new { @class = "text-danger" })
	</div>
	<div class="row form-group col-md-12">
		@Html.LabelFor(model => model.CompanyAccept, htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			<div class="checkbox">
				@Html.EditorFor(model => model.CompanyAccept)
				@Html.ValidationMessageFor(model => model.CompanyAccept, "", new { @class = "text-danger" })
			</div>
		</div>
	</div>

	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<button class="search-button btn my-2 my-sm-0" type="submit">Zapisz</button>
		</div>
	</div>
}

@using (Html.BeginForm("CancelReservation", "Reservation", FormMethod.Get))
{
	@Html.AntiForgeryToken()
	@Html.ValidationSummary(true, "", new { @class = "text-danger" })
	@Html.HiddenFor(model => model.Id)
	@Html.HiddenFor(model => model.TermId)

	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<button class="search-button btn my-2 my-sm-0" type="submit">Anuluj rezerwację</button>
		</div>
	</div>
}
