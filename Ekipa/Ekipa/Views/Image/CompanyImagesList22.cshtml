@using Ekipa.Models.ViewModel
@using Ekipa.Models.DB
@model Ekipa.Models.ViewModel.Company.CompanyImagesVM

@{
    ViewBag.Title = "CompanyImagesList";
}

@using (Html.BeginForm("CompanyImagesList", "Image", FormMethod.Post))
{
    @Html.AntiForgeryToken()


<div>
    <h4>Twoje zdjęcia</h4>
    <hr />
    <dl class="dl-horizontal"></dl>
</div>

<div class="row">
   
    @*<img class="img-responsive" src="@Url.Content(Model.MainPicturePath)" />*@

    <div class="container">
        <div class="row">
            @foreach (var item in Model.ImageList)
            {
                <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                    <a class="thumbnail" href="#">
                        <div class="caption">
                            <p> Usuń: @Html.CheckBoxFor(m => item.IsDelete, new { @checked = "checked" }); </p>
                            <img class="img-responsive" src="@Url.Content(item.Link)" />

                            <p>@Html.DisplayFor(modelItem => item.Description)</p>
                            @Html.EditorFor(modelItem => item.Description, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(modelItem => item.Description, "", new { @class = "text-danger" })
                            <p> Ustaw jako zdjęcie głowne: @Html.CheckBoxFor(m => item.MainPicture, new { @checked = "checked" }); </p>

                        </div>
                    </a>
                </div>
            }
                    <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                   <!-- <input type="submit" value="Save" class="btn btn-default" />-->
                    <div id="submitFormImage">wyślij</div>
                </div>
            </div>
        </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>
    $('#submitFormImage').on('click', function () {
        $('#editImageList').submit();
    })
</script>