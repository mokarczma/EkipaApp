@model Ekipa.Models.ViewModel.Company.CompanyImagesVM

@{
    ViewBag.Title = "CompanyImagesList";
}

<h2>CompanyImagesList</h2>

@using (Html.BeginForm("CompanyImagesList33", "Image", FormMethod.Post, new { @id = "editImageList", @name = "editImageList" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>CompanyImagesVM</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.MainPicturePath, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MainPicturePath, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MainPicturePath, "", new { @class = "text-danger" })
    
                @foreach (var item in Model.ImageList)
                {
                    <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                        <a class="thumbnail" href="#">
                            <div class="caption">
                                <p> Usuń: @Html.CheckBoxFor(m => item.IsDelete, new { @checked = "checked" }); </p>
                                <img class="img-responsive" src="@Url.Content(item.Link)" />

                                <p>@Html.DisplayFor(modelItem => item.Description)</p>
                                @Html.EditorFor(modelItem => item.Description, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(modelItem => item.Description, "", new { @class = "text-danger" })
                                <p> Ustaw jako zdjęcie głowne: @Html.CheckBoxFor(m => item.MainPicture, new { @checked = "checked" }); </p>

                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
               
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <!-- <input type="submit" value="Save" class="btn btn-default" />-->
                    <div id="submitFormImage">wyślij</div>
                </div>
            </div>
        </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>
    $('#submitFormImage').on('click', function () {
        $('#editImageList').submit();
    })
</script>