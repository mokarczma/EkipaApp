@model Ekipa.Models.ViewModel.Company.CompanyAddTermVM
@{
	ViewBag.Title = "AddCompanyTerm";
	Ekipa.Models.ViewModel.MainViewVM mainViewVM = new Ekipa.Models.ViewModel.MainViewVM();
	@Html.Partial("~/Views/Partial/_MainView.cshtml", mainViewVM);
}
<h2>Stwórz nowy termin</h2>
@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
			<dt>Data początkowa</dt>
			<div class="col-md-10">
				@Html.EditorFor(model => model.DateFrom, new { htmlAttributes = new { @class = "form-control datepicker", @placeholder = "dd-mm-rrrr" } })
				@Html.ValidationMessageFor(model => model.DateFrom, "", new { @class = "text-danger" })
			</div>
		</div>
		<div class="form-group">
			<dt>Data końcowa</dt>
			<div class="col-md-10">
				@Html.EditorFor(model => model.DateTo, new { htmlAttributes = new { @class = "datepicker field form-control", @placeholder = "dd -mm-rrrr" } })
				@Html.ValidationMessageFor(model => model.DateTo, "", new { @class = "text-danger" })
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<button class="search-button btn my-2 my-sm-0" type="submit">Zapisz</button>
			</div>
		</div>
	</div>
}

