@model Ekipa.Models.ViewModel.MainViewVM
@{
    Ekipa.Models.ViewModel.MainViewVM model = new Ekipa.Models.ViewModel.MainViewVM();
    var cityList = model.Miasta;

}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="shortcut icon" href="~/Content/images/ikon.png" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/style/StyleSheet.css")

    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href='@Url.Action("ZnajdźEkipę", "Home/index",FormMethod.Get)'>
                    <img class="img-responsive" src='@Url.Content("~/Content/images/ikon.png")' />
                </a>
            </div>
          
<div class="row navbar-collapse collapse">
                        @using (Html.BeginForm("MainView", "Home"))
                        {
                            <div class="offset1 col-lg-5 col-md-5 col-12">
                                <div class="row">
                                    <div class="d-inline-block col-lg-6">@Html.EditorFor(m => m.NameSearch, "", new { htmlAttributes = new { @class = "form-control", placeholder = "Szukaj" } })</div>
                                    <div class="d-inline-block col-lg-6">@Html.DropDownListFor(x => x.PlaceSearch, cityList, htmlAttributes: new { @class = "form-control" })</div>
                                </div>
                            </div>
                            <input type="image" name="submit" src="~/Content/images/icons8-szukaj-50.png" class="btn btn-default" />
                        }
                        <div class="col-lg-6 col-md-6 col-12">
                            <ul class="nav navbar-nav">
                                @if (ViewBag.UserName == null)
                                {
                                    <li> @Html.ActionLink("Logowanie klient", "LoginCustomer", "Account")</li>
                                    <li> @Html.ActionLink("Logowanie firma", "LoginCompany", "Account")</li>
                                }
                                else
                                {
                                    <li>@ViewBag.UserName</li>
                                    <li> @Html.ActionLink("Moje konto", "IndexCompany", "Account")</li>
                                    <li> @Html.ActionLink("Wyloguj", "Logout", "Account")</li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container body-content">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Monika</p>
                </footer>
            </div>
            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)
        </body>
    </html>
